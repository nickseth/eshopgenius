{%- if flair_banner_init != false -%}
  <style>
    .flair-banner-wrapper a, .flair-banner-wrapper a:active { text-decoration: none; opacity: 1; }
    .flair-banner-wrapper a:hover { text-decoration: none; opacity: .9; }
    .flair-banner-wrapper.flair-inline { display: inline-block; }
    .flair-banner-wrapper.flair-center { text-align: center; } /* will not work with .flair-inline */
    .flair-banner-wrapper.flair-space-sm { margin: 5px; }
    .flair-banner-wrapper.flair-space-md { margin: 10px; }
    .flair-banner-wrapper.flair-space-lg { margin: 20px; }
    .flair-banner-wrapper.flair-space-tb-sm { margin-top: 5px; margin-bottom: 5px; }
    .flair-banner-wrapper.flair-space-tb-md { margin-top: 10px; margin-bottom: 10px; }
    .flair-banner-wrapper.flair-space-tb-lg { margin-top: 20px; margin-bottom: 20px; }
    .flair-banner-wrapper.flair-space-lr-sm { margin-left: 10px; margin-right: 10px; }
    .flair-banner-wrapper.flair-space-lr-md { margin-left: 10px; margin-right: 10px; }
    .flair-banner-wrapper.flair-space-lr-lg { margin-left: 20px; margin-right: 20px; }
    .flair-banner-wrapper.flair-space-t-sm { margin-top: 5px; }
    .flair-banner-wrapper.flair-space-t-md { margin-top: 10px; }
    .flair-banner-wrapper.flair-space-t-lg { margin-top: 20px; }
    .flair-banner-wrapper.flair-space-b-sm { margin-bottom: 5px; }
    .flair-banner-wrapper.flair-space-b-md { margin-bottom: 10px; }
    .flair-banner-wrapper.flair-space-b-lg { margin-bottom: 20px; }
    .flair-banner-wrapper.flair-space-l-sm { margin-left: 5px; }
    .flair-banner-wrapper.flair-space-l-md { margin-left: 10px; }
    .flair-banner-wrapper.flair-space-l-lg { margin-left: 20px; }
    .flair-banner-wrapper.flair-space-r-sm { margin-right: 5px; }
    .flair-banner-wrapper.flair-space-r-md { margin-right: 10px; }
    .flair-banner-wrapper.flair-space-r-lg { margin-right: 20px; }
  </style>
{%- endif -%}
{%- liquid

assign flair_banner_init = false
assign flair_output = ""

assign flair_banner_max = flair_banner_max | default: 1
assign flair_banner_count = 0

assign flair_collection_ids = product.collections | map: "id"
assign flair_product_tag_string = product.tags | join: "|" | prepend: "|" | append: "|" | downcase
assign flair_customer_tag_string = customer.tags | join: "|" | prepend: "|" | append: "|" | downcase
assign flair_mfs = shop.metafields["flair-banners"]
for num in (1..flair_mfs.size)
  assign flair_mf_key = "banners" | append: num
  for flair_banner in flair_mfs[flair_mf_key]
    if flair_banner_count >= flair_banner_max
      break
    endif

    if flair_banner.status == "scheduled"
      assign flair_now_seconds = 'now' | date: '%s' | plus: 0
      assign flair_is_published = false
      assign flair_publish_seconds = flair_banner.published_at_epoch | plus: 0
      assign flair_unpublish_seconds = flair_banner.unpublished_at_epoch | plus: 0
      if flair_publish_seconds == 0 or flair_now_seconds >= flair_publish_seconds
        if flair_unpublish_seconds == 0 or flair_now_seconds < flair_unpublish_seconds
          assign flair_is_published = true
        endif
      endif
      unless flair_is_published
        continue
      endunless
    endif

    assign flair_all_rule_results = ""
    for flair_rule in flair_banner.rules
      assign flair_rule_result = false
      case flair_rule.rule_type
      when "collection"
        assign _flair_collection_ids = flair_rule.collections | map: "id"
        for item in _flair_collection_ids
          if collection.id == item or flair_collection_ids contains item
            assign flair_rule_result = true
            break
          endif
        endfor
      when "customer_behavior"
        case flair_rule.behavior_type
        when "spend_total"
          assign _flair_spend_total = flair_rule.spend_total | times: 100.0
          if flair_rule["operator"] == "lte"
            if customer.total_spent <= _flair_spend_total
              assign flair_rule_result = true
            endif
          elsif flair_rule["operator"] == "gte"
            if customer.total_spent >= _flair_spend_total
              assign flair_rule_result = true
            endif
          endif
        when "order_count"
          if flair_rule["operator"] == "lte"
            if customer.orders_count <= flair_rule.order_count
              assign flair_rule_result = true
            endif
          elsif flair_rule["operator"] == "gte"
            if customer.orders_count >= flair_rule.order_count
              assign flair_rule_result = true
            endif
          endif
        endcase
      when "customer_tag"
        for item in flair_rule.tags
          assign _flair_tag = item | prepend: "|" | append: "|" | downcase
          if flair_customer_tag_string contains _flair_tag
            assign flair_rule_result = true
            break
          endif
        endfor
      when "page_type"
        assign _flair_page_types = flair_rule.page_types | map: "id"
        if _flair_page_types contains request.page_type
          assign flair_rule_result = true
        endif
      when "product"
        assign _flair_product_ids = flair_rule.products | map: "id"
        if _flair_product_ids contains product.id
          assign flair_rule_result = true
        endif
      when "tag"
        for item in flair_rule.tags
          assign _flair_tag = item | prepend: "|" | append: "|" | downcase
          if flair_product_tag_string contains _flair_tag
            assign flair_rule_result = true
            break
          endif
        endfor
      endcase
      if flair_rule_result
        assign flair_all_rule_results = flair_all_rule_results | append: "1"
      else
        assign flair_all_rule_results = flair_all_rule_results | append: "0"
      endif
    endfor

    assign flair_show_banner = false
    if flair_banner.rules_apply_to == "all"
      unless flair_all_rule_results contains "0"
        assign flair_show_banner = true
      endunless
    elsif flair_all_rule_results contains "1"
      assign flair_show_banner = true
    endif

    if flair_show_banner
      assign flair_banner_count = flair_banner_count | plus: 1
      assign flair_css_style = ""
      if flair_css
        assign flair_css_style = 'style = "' | append: flair_css | append: '"'
      endif
      capture "flair_banner_output"
        echo '<div class="flair-banner-wrapper ' | append: flair_css_class | append: '" ' | append: flair_css_style | append: '>'
        echo flair_banner.content
        echo '</div>'
      endcapture
      assign flair_output = flair_output | append: flair_banner_output
    endif
  endfor
endfor

assign flair_banner_max = blank
assign flair_css = blank
assign flair_css_class = blank
-%}
{{ flair_output }}
