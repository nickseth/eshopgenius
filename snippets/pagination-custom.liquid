<ul class="pagination-custom">
  {% if paginate.previous %}
    <li class="arrow-pagination"><a href="{{ paginate.previous.url }}" title="{{ paginate.previous.title }}">«</a></li>
  {% else %}
    <li class="disabled arrow-pagination"><span>«</span></li>
  {% endif %}

  {% for part in paginate.parts %}
    {% if part.is_link %}
      <li>
        <a href="{{ part.url }}" title="">{{ part.title }}</a>
      </li>
    {% else %}
      {% if part.title == paginate.current_page %}
        <li class="active"><span>{{ part.title }}</span></li>
      {% else %}
        <li><span>{{ part.title }}</span></li>
      {% endif %}
    {% endif %}
  {% endfor %}

  {% if paginate.next %}
    <li class="arrow-pagination"><a href="{{ paginate.next.url }}" title="{{ paginate.next.title }}">»</a></li>
  {% else %}
    <li class="disabled arrow-pagination"><span>»</span></li>
  {% endif %}
</ul>
